{
	"table": "pages",	// REQUIRED
	"key": "id",		// REQUIRED
	"title": "Pages",
	"shortlist": [		// REQUIRED
		"page_title",
		"page_date",
		"page_status",
		"page_author"
	],

	"where" : "WHERE page_status <> 'revision'",
	"order_by" : "page_date DESC",

	"fields": [{
		"name": "page_title",		// REQUIRED
		"type": "text",				// REQUIRED
		"custom_class": "",
		"placeholder": "My New Page",
		"default_value": "",
		"validation_rules": ""
	}, {
		"name": "page_content",		// REQUIRED
		"type": "wysiwyg",			// REQUIRED
		"custom_class": "",
		"placeholder": "",
		"default_value": "",
		"validation_rules": ""
	}, {
		"name": "page_date",		// REQUIRED
		"type": "date",				// REQUIRED
		"custom_class": "",
		"placeholder": "",
		"default_value": "",
		"validation_rules": ""
	}, {
		"name": "page_status",		// REQUIRED
		"type": "",					// REQUIRED
		"custom_class": "",
		"placeholder": "",
		"default_value": "",
		"validation_rules": ""
	}, {
		"name": "page_author",		// REQUIRED
		"type": "dropdown",			// REQUIRED
		"custom_class": "",
		"default_value": "",
		"validation_rules": "",

		"source": "table",	// REQUIRED

		"table": {
			"table": "users",		// REQUIRED
			"key": "id", 			// REQUIRED
			"format": "{user_display_name} ({user_login})",
			"fields": [{
				"column": "user_display_name",			// REQUIRED
				"placeholder": "user_display_name"		// REQUIRED
			}, {
				"column": "user_login",
				"placeholder": "user_login"
			}]
		}

	}, {
		"name": "page_type",		// REQUIRED
		"type": "dropdown",			// REQUIRED
		"custom_class": "",
		"placeholder": "",
		"default_value": "",
		"validation_rules": "",

		"source": "options",
		"options": [
			"published",
			"scheduled",
			"draft",
			"revision"
		]
	}, {
		"name": "page_slug",		// REQUIRED
		"type": "slug",				// REQUIRED
		"custom_class": "",
		"placeholder": "",
		"default_value": "",
		"validation_rules": ""
	}],
}