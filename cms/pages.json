{
	"table": "pages",
	"key": "id",
	"title": "Pages",
	"shortlist": [
		"page_title",
		"page_date",
		"page_status",
		"page_author"
	],

	"where" : "WHERE page_status <> 'revision'",
	"order_by" : "page_date DESC",

	"fields": [{
		"name": "page_title",
		"type": "text",
		"custom_class": "",
		"placeholder": "My New Page",
		"default_value": "",
		"validation_rules": "required"
	}, {
		"name": "page_slug",
		"type": "text",
		"custom_class": "",
		"placeholder": "",
		"default_value": "",
		"validation_rules": "required|alpha_num",
		"class": "col-md-6 col-sm-6 col-xs-12"
	},{
		"name": "page_date",
		"type": "date",
		"custom_class": "",
		"placeholder": "",
		"default_value": "",
		"validation_rules": "required|date",
		"class": "col-md-6 col-sm-6 col-xs-12"
	},{
		"name": "page_content",
		"type": "wysiwyg",
		"custom_class": "",
		"placeholder": "",
		"default_value": "",
		"validation_rules": ""
	}, {
		"name": "page_author",
		"type": "dropdown",
		"custom_class": "",
		"placeholder": "Choose an author",
		"default_value": "",
		"validation_rules": "required|exists:users,id",
		"class": "col-md-6 col-sm-6 col-xs-12",

		"source": "table",

		"table": {
			"table": "users", 
			"key": "id", 
			"format": "{user_display_name} ({user_login})",
			"fields": [{
				"column": "user_display_name",
				"placeholder": "user_display_name"
			}, {
				"column": "user_login",
				"placeholder": "user_login"
			}]
		}

	}, {
		"name": "page_status",
		"type": "dropdown",
		"custom_class": "",
		"placeholder": "",
		"default_value": "",
		"validation_rules": "required|in:published,scheduled,draft,revision",
		"class": "col-md-6 col-sm-6 col-xs-12",

		"source": "options",
		"options": [
			"published",
			"scheduled",
			"draft",
			"revision"
		]
	}],

	"permissions": [
		"edit",
		"delete",
		"create"
	]
}